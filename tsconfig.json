{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strict": true,
        "target": "es5",
        "lib": [
            "es6",
            "dom" // because Rx has one library both for dom and nodejs version, and needs both definitions; see https://github.com/ReactiveX/rxjs/issues/1986
        ]
    }
}